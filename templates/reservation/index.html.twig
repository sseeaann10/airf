{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DepartureDateTime</th>
                <th>DepartureCity</th>
                <th>ArrivalCity</th>
                <th>Ticket Type</th>
                <th>Service</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.Nom }}</td>
                <td>{{ reservation.Prenom }}</td>
                <td>{{ reservation.departureDateTime ? reservation.departureDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.departureCity }}</td>
                <td>{{ reservation.arrivalCity }}</td>
                <td>{{ reservation.tickettype.name }}</td>
                <td>{{ reservation.tickettype.service }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
